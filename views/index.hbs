{{!-- Load navbar partial --}}
{{>navbar}}
  
<div class='flex flex-col justify-center items-center h-full'>
  <div id='chat'>
    <!-- Chat messages will be displayed here -->
  </div>
  <form
    id='messageForm'
    hx-post='/message'
    hx-trigger='submit'
    hx-swap='beforeend'
    hx-target='#chat'
  >
    <input
      type='text'
      id='message'
      name='message'
      class='input'
      placeholder='Your message'
      required
    />
    <button type='submit' class='btn btn-neutral'>Send</button>
  </form>
  <div
    id='sse-listener'
    hx-ext='sse'
    sse-connect='/sse'
    sse-swap='message'
    hx-swap='beforeend'
    hx-target='#chat'
  >
  </div>
</div>

