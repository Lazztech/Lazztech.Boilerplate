{{>navbar}}

<main>
  {{!-- Hero --}}
  <section class="hero min-h-screen bg-base-200">
    <div class="hero-content text-center flex-col gap-8 py-24 px-4">
      <div class="flex justify-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1"
          stroke="currentColor"
          class="size-24 text-primary"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"
          />
        </svg>
      </div>
      <div class="max-w-2xl">
        <div class="badge badge-outline mb-4">
          {{t 'lang.OPEN_SOURCE_BADGE'}}
        </div>
        <h1 class="text-5xl font-bold mb-4">{{t 'lang.TAGLINE'}}</h1>
        <p class="text-lg text-base-content/70 mb-8">
          {{t 'lang.HERO_DESCRIPTION'}}
        </p>
        <div class="flex flex-wrap gap-3 justify-center">
          {{#if authEnabled}} {{#unless user}}
          <a href="/auth/register" class="btn btn-primary btn-lg"
            >{{t 'lang.GET_STARTED'}}</a
          >
          {{/unless}} {{/if}} {{#unless authEnabled}}
          <a href="/files" class="btn btn-primary btn-lg"
            >{{t 'lang.GET_STARTED'}}</a
          >
          {{/unless}}
          <a
            href="https://github.com/Lazztech/Lazztech.Boilerplate"
            target="_blank"
            rel="noopener"
            hx-boost="false"
            class="btn btn-ghost btn-lg gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="size-5"
            >
              <path
                d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
              />
            </svg>
            GitHub
          </a>
        </div>
      </div>
    </div>
  </section>

  {{!-- Features --}}
  <section class="py-20 px-4 bg-base-100">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">
        {{t 'lang.FEATURES_TITLE'}}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {{!-- JWT Auth --}}
        <div class="card bg-base-200 shadow-sm">
          <div class="card-body items-center text-center gap-3">
            <div class="text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z"
                />
              </svg>
            </div>
            <h3 class="card-title text-base">
              {{t 'lang.FEATURE_AUTH_TITLE'}}
            </h3>
            <p class="text-sm text-base-content/70">
              {{t 'lang.FEATURE_AUTH_DESC'}}
            </p>
          </div>
        </div>

        {{!-- PWA --}}
        <div class="card bg-base-200 shadow-sm">
          <div class="card-body items-center text-center gap-3">
            <div class="text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M10.5 1.5H8.25A2.25 2.25 0 0 0 6 3.75v16.5a2.25 2.25 0 0 0 2.25 2.25h7.5A2.25 2.25 0 0 0 18 20.25V3.75a2.25 2.25 0 0 0-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 8.25h3m-3 3.75h3m-3 3.75h3"
                />
              </svg>
            </div>
            <h3 class="card-title text-base">{{t 'lang.FEATURE_PWA_TITLE'}}</h3>
            <p class="text-sm text-base-content/70">
              {{t 'lang.FEATURE_PWA_DESC'}}
            </p>
          </div>
        </div>

        {{!-- MikroORM --}}
        <div class="card bg-base-200 shadow-sm">
          <div class="card-body items-center text-center gap-3">
            <div class="text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125"
                />
              </svg>
            </div>
            <h3 class="card-title text-base">{{t 'lang.FEATURE_ORM_TITLE'}}</h3>
            <p class="text-sm text-base-content/70">
              {{t 'lang.FEATURE_ORM_DESC'}}
            </p>
          </div>
        </div>

        {{!-- File Storage --}}
        <div class="card bg-base-200 shadow-sm">
          <div class="card-body items-center text-center gap-3">
            <div class="text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v8.25A2.25 2.25 0 0 0 4.5 16.5h15a2.25 2.25 0 0 0 2.25-2.25V8.25A2.25 2.25 0 0 0 19.5 6h-5.379a1.5 1.5 0 0 1-1.06-.44Z"
                />
              </svg>
            </div>
            <h3 class="card-title text-base">
              {{t 'lang.FEATURE_FILE_TITLE'}}
            </h3>
            <p class="text-sm text-base-content/70">
              {{t 'lang.FEATURE_FILE_DESC'}}
            </p>
          </div>
        </div>

        {{!-- HTMX --}}
        <div class="card bg-base-200 shadow-sm">
          <div class="card-body items-center text-center gap-3">
            <div class="text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M14.25 9.75 16.5 12l-2.25 2.25m-4.5 0L7.5 12l2.25-2.25M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z"
                />
              </svg>
            </div>
            <h3 class="card-title text-base">
              {{t 'lang.FEATURE_HTMX_TITLE'}}
            </h3>
            <p class="text-sm text-base-content/70">
              {{t 'lang.FEATURE_HTMX_DESC'}}
            </p>
          </div>
        </div>

        {{!-- i18n --}}
        <div class="card bg-base-200 shadow-sm">
          <div class="card-body items-center text-center gap-3">
            <div class="text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="m10.5 21 5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 0 1 6-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 0 1-3.827-5.802"
                />
              </svg>
            </div>
            <h3 class="card-title text-base">
              {{t 'lang.FEATURE_I18N_TITLE'}}
            </h3>
            <p class="text-sm text-base-content/70">
              {{t 'lang.FEATURE_I18N_DESC'}}
            </p>
          </div>
        </div>

        {{!-- Docker --}}
        <div class="card bg-base-200 shadow-sm">
          <div class="card-body items-center text-center gap-3">
            <div class="text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 17.25v.75a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25v-.75m16.5-8.25h-15A2.25 2.25 0 0 0 2.25 11.25v4.5A2.25 2.25 0 0 0 4.5 18h15a2.25 2.25 0 0 0 2.25-2.25v-4.5A2.25 2.25 0 0 0 19.5 9Zm-16.5 0V6.75A2.25 2.25 0 0 1 4.5 4.5h15a2.25 2.25 0 0 1 2.25 2.25V9"
                />
              </svg>
            </div>
            <h3 class="card-title text-base">
              {{t 'lang.FEATURE_DOCKER_TITLE'}}
            </h3>
            <p class="text-sm text-base-content/70">
              {{t 'lang.FEATURE_DOCKER_DESC'}}
            </p>
          </div>
        </div>

        {{!-- Lighthouse --}}
        <div class="card bg-base-200 shadow-sm">
          <div class="card-body items-center text-center gap-3">
            <div class="text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z"
                />
              </svg>
            </div>
            <h3 class="card-title text-base">
              {{t 'lang.FEATURE_LIGHTHOUSE_TITLE'}}
            </h3>
            <p class="text-sm text-base-content/70">
              {{t 'lang.FEATURE_LIGHTHOUSE_DESC'}}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  {{!-- Stack badges --}}
  <section class="py-10 px-4 bg-base-100 border-y border-base-200">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-xl font-semibold text-center text-base-content/60 mb-6">
        {{t 'lang.STACK_TITLE'}}
      </h2>
      <div class="flex flex-wrap justify-center gap-3">
        <span class="badge badge-outline badge-lg">NestJS</span>
        <span class="badge badge-outline badge-lg">HTMX</span>
        <span class="badge badge-outline badge-lg">Handlebars (HBS)</span>
        <span class="badge badge-outline badge-lg">Tailwind CSS</span>
        <span class="badge badge-outline badge-lg">DaisyUI</span>
        <span class="badge badge-outline badge-lg">MikroORM</span>
        <span class="badge badge-outline badge-lg">SQLite / PostgreSQL</span>
        <span class="badge badge-outline badge-lg">JWT Auth</span>
        <span class="badge badge-outline badge-lg">PWA + Workbox</span>
        <span class="badge badge-outline badge-lg">Web Push</span>
        <span class="badge badge-outline badge-lg">S3 / Local Storage</span>
        <span class="badge badge-outline badge-lg">nestjs-i18n</span>
        <span class="badge badge-outline badge-lg">Docker</span>
        <span class="badge badge-outline badge-lg">TypeScript</span>
      </div>
    </div>
  </section>

  {{!-- Self-host section --}}
  <section class="py-20 px-4 bg-base-200">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4">{{t 'lang.SELF_HOST_TITLE'}}</h2>
      <p class="text-base-content/70 mb-8">{{t 'lang.SELF_HOST_DESC'}}</p>
      <div class="mockup-code text-left text-sm">
        <pre
          data-prefix="$"
        ><code>git clone https://github.com/Lazztech/Lazztech.Boilerplate</code></pre>
        <pre data-prefix="$"><code>npm install && npm run start:dev</code></pre>
      </div>
      <p class="text-xs text-base-content/70 mt-4">
        {{t 'lang.SELF_HOST_NOTE'}}
      </p>
    </div>
  </section>

  {{!-- Footer --}}
  <footer
    class="footer footer-center py-8 bg-base-100 text-base-content/80 text-sm pb-28"
  >
    <div class="flex flex-col items-center gap-3">
      <div class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"
          />
        </svg>
        <span class="font-semibold">Lazztech Boilerplate</span>
      </div>
      <p>
        {{t 'lang.OPEN_SOURCE_BADGE'}} &middot;
        <a
          href="https://github.com/Lazztech/Lazztech.Boilerplate"
          target="_blank"
          rel="noopener"
          hx-boost="false"
          class="link link-hover"
          >GitHub</a
        >
      </p>
      <p>
        Made with â™¥ by
        <a
          href="https://lazztech.com"
          target="_blank"
          rel="noopener"
          hx-boost="false"
          class="link link-hover"
          >Lazztech LLC</a
        >
      </p>
    </div>
  </footer>
</main>

{{>dock}}
