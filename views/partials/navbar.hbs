{{!--
https://daisyui.com/components/drawer/#navbar-menu-for-desktop--sidebar-drawer-for-mobile
--}}
<div class="drawer navbar">
  <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div class="navbar bg-base-300 w-full">
      <div class="flex-none lg:hidden">
        <label
          for="my-drawer-2"
          aria-label="open sidebar"
          class="btn btn-square btn-ghost"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-6 w-6 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </label>
      </div>
      <div class="mx-2 flex flex-row gap-2 px-2">
        {{appName}}
        <div class="relative size-6">
          <div id="offline-indicator" class="absolute inset-0">
            <span
              id="loading"
              class="htmx-indicator loading loading-ring loading-sm"
            ></span>
          </div>
        </div>
      </div>
      <div class="hidden flex-none ml-auto lg:block">
        <ul class="menu menu-horizontal">
          <!-- Navbar menu content here -->
          {{#if user}}
          <li><a href="/auth/logout">{{t 'lang.LOGOUT'}}</a></li>
          <li><a href="/auth/profile">{{user.email}}</a></li>
          {{else}}
          <li><a href="/auth/register">{{t 'lang.REGISTER'}}</a></li>
          <li><a href="/auth/login">{{t 'lang.LOGIN'}}</a></li>
          {{/if}}
        </ul>
      </div>
    </div>
  </div>
  <div class="drawer-side pt-16">
    <label
      for="my-drawer-2"
      aria-label="close sidebar"
      class="drawer-overlay"
    ></label>
    <ul class="menu bg-base-200 min-h-full w-80 p-4 pt-8">
      <!-- Sidebar content here -->
      {{#if user}}
      <li><a href="/auth/logout">{{t 'lang.LOGOUT'}}</a></li>
      <li><a href="/auth/profile">{{user.email}}</a></li>
      {{else}}
      <li><a href="/auth/register">{{t 'lang.REGISTER'}}</a></li>
      <li><a href="/auth/login">{{t 'lang.LOGIN'}}</a></li>
      {{/if}}
    </ul>
  </div>
</div>
