{
  "name": "lazztech.boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && npm run tailwind",
    "tailwind": "npx @tailwindcss/cli -i ./views/assets/main.css -o ./public/bundle.css --minify",
    "tailwind:watch": "npx @tailwindcss/cli -i ./views/assets/main.css -o ./public/bundle.css --minify --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run tailwind && nest start",
    "start:dev": "concurrently \"nest start --watch\" \"npm run tailwind:watch\"",
    "start:debug": "concurrently \"nest start --debug --watch\" \"npm run tailwind:watch\"",
    "start:prod": "node dist/main",
    "lighthouse": "lhci autorun",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@khmyznikov/pwa-install": "^0.5.8",
    "@mikro-orm/core": "^6.5.6",
    "@mikro-orm/migrations": "^6.5.6",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.5.6",
    "@mikro-orm/sqlite": "^6.5.6",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@tailwindcss/cli": "^4.1.14",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "hbs": "^4.2.0",
    "htmx-ext-sse": "^2.2.2",
    "htmx.org": "^2.0.7",
    "joi": "^18.0.1",
    "lodash": "^4.17.21",
    "nestjs-i18n": "^10.5.1",
    "nestjs-s3": "^3.0.1",
    "nodemailer": "^7.0.9",
    "nodemailer-mailgun-transport": "^2.1.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.14",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@lhci/cli": "^0.15.1",
    "@mikro-orm/cli": "^6.5.7",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/hbs": "^4.0.5",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.2",
    "@types/nodemailer-mailgun-transport": "^1.4.6",
    "@types/supertest": "^6.0.2",
    "@types/web-push": "^3.6.4",
    "concurrently": "^9.2.1",
    "daisyui": "^5.1.27",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/migrations/**/*",
      "!**/entity/**/*",
      "!**/*.dto.*",
      "!**/*.input.*",
      "!**/*.module.*"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!(uuid)/)"
    ]
  }
}
